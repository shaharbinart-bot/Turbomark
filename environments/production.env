# TURBOMARK PRODUCTION ENVIRONMENT

# Application Settings
NODE_ENV=production
PORT=5000
APP_URL=https://turbomark.com
API_VERSION=v1
ENVIRONMENT=production

# Database Configuration (Production)
DATABASE_URL=postgresql://postgres:${POSTGRES_PASSWORD}@postgres:5432/turbomarketing
POSTGRES_PASSWORD=${POSTGRES_PASSWORD}
DB_POOL_MIN=5
DB_POOL_MAX=50

# Redis Configuration (Production)
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=${REDIS_PASSWORD}

# Security (Production Keys)
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRATION=7d
BCRYPT_ROUNDS=12
CORS_ORIGIN=https://turbomark.com

# AI Service API Keys (Production)
OPENAI_API_KEY=${OPENAI_API_KEY}
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}
GEMINI_API_KEY=${GEMINI_API_KEY}
HUGGINGFACE_API_KEY=${HUGGINGFACE_API_KEY}

# Payment Processing (Stripe Live Mode)
STRIPE_PUBLISHABLE_KEY=${STRIPE_PUBLISHABLE_KEY}
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY}
STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET}

# Email Service (Production)
SENDGRID_API_KEY=${SENDGRID_API_KEY}
FROM_EMAIL=noreply@turbomark.com
SUPPORT_EMAIL=support@turbomark.com

# AWS Configuration (Production)
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
AWS_REGION=us-east-1
S3_BUCKET_NAME=turbomark-production-assets

# Monitoring (Production)
MONITOR_EMAIL=${MONITOR_EMAIL}
MONITOR_PASSWORD=${MONITOR_PASSWORD}
TURBOMARK_DOMAIN=turbomark.com

# Performance (Production)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
MAX_JOB_CONCURRENCY=10
JOB_TIMEOUT=300000

# Production Security
ENABLE_DEBUG_MODE=false
ENABLE_VERBOSE_LOGGING=false
ENABLE_TEST_ENDPOINTS=false
STAGING_MODE=false
ALLOW_CORS_ALL=false
DISABLE_SSL_VERIFY=false
