# TURBOMARK STAGING ENVIRONMENT

# Application Settings
NODE_ENV=staging
PORT=5000
APP_URL=https://staging.turbomark.com
API_VERSION=v1
ENVIRONMENT=staging

# Database Configuration (Staging)
DATABASE_URL=postgresql://postgres:staging_password@postgres-staging:5432/turbomarketing_staging
POSTGRES_PASSWORD=staging_secure_password_2024
DB_POOL_MIN=1
DB_POOL_MAX=10

# Redis Configuration (Staging)
REDIS_URL=redis://redis-staging:6379
REDIS_PASSWORD=staging_redis_pass_2024

# Security (Staging Keys)
JWT_SECRET=staging_jwt_secret_key_minimum_32_characters_for_testing
JWT_EXPIRATION=7d
BCRYPT_ROUNDS=10

# AI Service API Keys (Staging/Test Keys)
OPENAI_API_KEY=sk-staging_openai_api_key_here
ANTHROPIC_API_KEY=sk-ant-staging_anthropic_key_here
GEMINI_API_KEY=staging_gemini_api_key_here
HUGGINGFACE_API_KEY=hf_staging_huggingface_key

# Payment Processing (Stripe Test Mode)
STRIPE_PUBLISHABLE_KEY=pk_test_staging_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_staging_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_staging_webhook_secret

# Email Service (Test Mode)
SENDGRID_API_KEY=SG.staging_sendgrid_api_key_here
FROM_EMAIL=staging@turbomark.com
SUPPORT_EMAIL=staging-support@turbomark.com

# Monitoring (Staging)
MONITOR_EMAIL=alerts+staging@turbomark.com
MONITOR_PASSWORD=staging_monitor_pass_2024
TURBOMARK_DOMAIN=staging.turbomark.com

# Feature Flags (Staging)
ENABLE_DEBUG_MODE=true
ENABLE_VERBOSE_LOGGING=true
ENABLE_TEST_ENDPOINTS=true
RATE_LIMIT_REQUESTS=1000
API_RATE_LIMIT=500

# Staging Specific
STAGING_MODE=true
ALLOW_CORS_ALL=true
DISABLE_SSL_VERIFY=true
MOCK_EXTERNAL_APIS=false
